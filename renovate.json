{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "regexManagers:dockerfileVersions"
  ],
  "helmv3": {
    "enabled": true,
    "bumpVersion": "patch"
  },
  "dockerfile": {
    "packageRules": [
      {
        "matchUpdateTypes": ["major"],
        "matchPackageNames": ["common-docker.repository.swedbank.net/node"],
        "enabled": true
      }
    ]
  },
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["FROM node:(?<currentValue>\\S+)-alpine(?<currentAlpineVersion>\\d+\\.\\d+) AS builder"],
      "depNameTemplate": "node",
      "currentValueTemplate": "{{currentValue}}-alpine{{currentAlpineVersion}}",
      "datasourceTemplate": "docker"
    }
  ]
  ,
  "packageRules": [
    {
      "matchPackageNames": ["git/git", "helm/helm"],
      "extractVersion": "^v(?<version>.*)$"
    },
    {
      "matchPackageNames": ["curl/curl"],
      "extractVersion": "^curl-(?<version>.*)$",
      "versioning": "regex:^(?<major>\\d+)_(?<minor>\\d+)_(?<patch>\\d+)$"
    }
  ]
}
