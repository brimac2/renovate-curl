{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "regexManagers:dockerfileVersions"
  ],
  "helmv3": {
    "enabled": true,
    "bumpVersion": "patch"
  },
  "dockerfile": {
    "packageRules": [
      {
        "matchDatasources": ["major"],
        "matchPackageNames": ["common-docker.repository.swedbank.net/node"],
        "enabled": true
      }
    ]
  },
  "regexManagers": [
    {
      "fileMatch": ["^Dockerfile$"],
      "matchStrings": ["FROM node:(?<currentValue>\\S+)-alpine(?<currentAlpineVersion>\\d+\\.\\d+) AS builder"],
      "depNameTemplate": "node-alpine",
      "currentValueTemplate": "{{currentValue}}-alpine{{currentAlpineVersion}}",
      "datasourceTemplate": "docker"
    }
  ]

}
